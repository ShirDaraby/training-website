<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="website.template_header_default" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>
    <record id="website.template_header_search" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <template id="template_header_opt" inherit_id="website.snippet_options" name="Header Template - Option">
        <xpath expr="//we-select[@data-variable='header-template']" position="inside">
            <we-button title="airproof" data-customize-website-views="header" data-customize-website-variable="'airproof'" data-img="/website_airproof/static/src/img/wbuilder/air_proof_header.jpeg"/>
        </xpath>
        <xpath expr="//we-select[@data-variable='footer-template']" position="inside">
            <we-button title="airproof" data-customize-website-views="website_airproof.footer" data-customize-website-variable="'airproof'" data-img="/website_airproof/static/src/img/wbuilder/air_proof_header.jpeg"/>
        </xpath>
    </template>

    <template id="portal.user_sign_in_redirect" name="User Sign In redirect" inherit_id="portal.user_sign_in" primary="True">
        <xpath expr="//a" position="attributes">
            <attribute name="t-attf-href">/web/login?redirect={{request.httprequest.path}}</attribute>
        </xpath>
    </template>
</odoo>
