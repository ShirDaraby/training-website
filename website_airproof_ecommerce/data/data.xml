<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">
    <!-- We want to activate product variant by default for easier demoing. -->
    <record id="base.group_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('product.group_product_variant'))]"/>
    </record>

    <!-- Categories -->

    <record id="public_category_airproof_drones" model="product.public.category">
        <field name="name">Drones</field>
    </record>

    <record id="public_category_airproof_accesories" model="product.public.category">
        <field name="name">Accesories</field>
    </record>

    <record id="public_category_airproof_warranties" model="product.public.category">
        <field name="name">Warranties</field>
    </record>

    <!-- Variants -->

    <!-- Weight -->
    <record id="product_attribute_1" model="product.attribute">
        <field name="name">Weight</field>
        <field name="sequence">10</field>
    </record>
    <record id="product_attribute_value_1" model="product.attribute.value">
        <field name="name">200 g</field>
        <field name="attribute_id" ref="product_attribute_1"/>
        <field name="sequence">1</field>
    </record>
    <record id="product_attribute_value_2" model="product.attribute.value">
        <field name="name">400 g</field>
        <field name="attribute_id" ref="product_attribute_1"/>
        <field name="sequence">2</field>
    </record>
    <!-- Max Speed -->
    <record id="product_attribute_2" model="product.attribute">
        <field name="name">Max Speed</field>
        <field name="sequence">20</field>
    </record>
    <record id="product_attribute_value_3" model="product.attribute.value">
        <field name="name">57.6 kph</field>
        <field name="attribute_id" ref="product_attribute_2"/>
        <field name="sequence">1</field>
    </record>
    <record id="product_attribute_value_4" model="product.attribute.value">
        <field name="name">60.4 kph</field>
        <field name="attribute_id" ref="product_attribute_2"/>
        <field name="sequence">2</field>
    </record>
    <record id="product_attribute_value_5" model="product.attribute.value">
        <field name="name">62.0 kph</field>
        <field name="attribute_id" ref="product_attribute_2"/>
        <field name="sequence">3</field>
    </record>
    <!-- Video Transmission System -->
    <record id="product_attribute_3" model="product.attribute">
        <field name="name">Video Transmission System</field>
        <field name="sequence">30</field>
    </record>
    <record id="product_attribute_value_6" model="product.attribute.value">
        <field name="name">Wi-Fi</field>
        <field name="attribute_id" ref="product_attribute_3"/>
        <field name="sequence">1</field>
    </record>
    <record id="product_attribute_value_7" model="product.attribute.value">
        <field name="name">Unknown</field>
        <field name="attribute_id" ref="product_attribute_3"/>
        <field name="sequence">2</field>
    </record>

    <!-- Airproof Mini product /////////////////////////////////////////////////// -->
    <record id="product_airproof_mini" model="product.template">
        <field name="name">Airproof Mini</field>
        <field name="is_published" eval="True"/>
        <field name="categ_id" ref="product.product_category_all"/>
        <field name="public_categ_ids" eval="[(6,0,[ref('public_category_airproof_drones')])]"/>
        <field name="list_price">150.00</field>
        <field name="image_1920" type="base64" file="website_airproof_ecommerce/static/src/img/photos/airproof-mini.png"/>
        <field name="description_sale">This drone offers true vertical video shooting for all your TikTok and Instagram Reels needs.</field>
        <field name="website_description" type="html">
            <section class="s_text_block pt40 pb40" data-snippet="s_text_block" data-name="Text Block">
                <div class="container s_allow_columns">
                    <h6>About this drone</h6>
                    <p>This drone offers true vertical video shooting for all your TikTok and Instagram Reels needs.</p>
                </div>
            </section>
        </field>
    </record>

    <!-- its attributes -->
    <record id="product_airproof_mini_attribute_1_product_template_attribute_line" model="product.template.attribute.line">
        <field name="product_tmpl_id" ref="product_airproof_mini"/>
        <field name="attribute_id" ref="product_attribute_1"/>
        <field name="value_ids" eval="[(6, 0, [ref('product_attribute_value_1')])]"/>
    </record>
    <record id="product_airproof_mini_attribute_2_product_template_attribute_line" model="product.template.attribute.line">
        <field name="product_tmpl_id" ref="product_airproof_mini"/>
        <field name="attribute_id" ref="product_attribute_2"/>
        <field name="value_ids" eval="[(6, 0, [ref('product_attribute_value_5')])]"/>
    </record>
    <record id="product_airproof_mini_attribute_3_product_template_attribute_line" model="product.template.attribute.line">
        <field name="product_tmpl_id" ref="product_airproof_mini"/>
        <field name="attribute_id" ref="product_attribute_3"/>
        <field name="value_ids" eval="[(6, 0, [ref('product_attribute_value_7')])]"/>
    </record>

