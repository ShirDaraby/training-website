        <field name="attribute_id" ref="product_attribute_2"/>
        <field name="value_ids" eval="[(6, 0, [ref('product_attribute_value_3')])]"/>
    </record>
    <record id="product_airproof_pro_attribute_3_product_template_attribute_line" model="product.template.attribute.line">
        <field name="product_tmpl_id" ref="product_airproof_pro"/>
