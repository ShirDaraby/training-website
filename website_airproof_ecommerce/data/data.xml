    <!-- An accessory /////////////////////////////////////////////////// -->
    <record id="product_accessory" model="product.template">
        <field name="name">DJI 65W Car Charger</field>
        <field name="is_published" eval="True"/>
        <field name="categ_id" ref="product.product_category_all"/>
        <field name="public_categ_ids" eval="[(6,0,[ref('public_category_airproof_accesories')])]"/>
        <field name="list_price">85.00</field>
        <field name="image_1920" type="base64" file="website_airproof_ecommerce/static/src/img/photos/accessory.png"/>
        <field name="description_sale">A must-have on the go, the 65W Car Charger can charge different devices in the car. Universal ports, easy to use.</field>
