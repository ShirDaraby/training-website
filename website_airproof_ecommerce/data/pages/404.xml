<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="404" inherit_id="http_routing.404">
    <xpath expr="//div[hasclass('oe_structure')]" position="replace">

        <!-- Title -->
        <t t-set="additional_title" t-value="'404 - Page not found'"/>

        <!-- Content -->
        <div class="oe_structure">
            <section class="s_text_image o_colored_level pt128 pb136" data-snippet="s_image_text" data-name="Image - Text">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-6 pt16 pb16 o_colored_level">
                            <img src="/web/image/website_airproof_ecommerce.img_error" alt="Error image" class="img img-fluid mx-auto" data-mimetype="image/png" data-resize-width="500"/>
                        </div>
                        <div class="pt16 pb16 o_colored_level offset-lg-1 col-lg-4">
                            <h1 class="x_big_title">No results found...</h1>

                            <p>The page you are looking for doesn’t exist. Please check your URL for spellings or capitalizations.</p>
                            <p>
                                <a href="/" class="mb-2 btn btn-custom x_btn_shape x_btn_outlined text-o-color-1 bg-o-color-4 btn-lg" style="border-width: 2px; border-style: solid; border-color: rgb(0, 0, 0);">Take me back home<img src="/web/image/website_airproof_ecommerce.img_arrow" alt="Arrow icon" class="img img-fluid ml-2"/>​​​​​​</a>
                            </p>
                        </div>
                    </div>
                </div>
            </section>
                 
        </div>
    </xpath>
</template>

</odoo>
