<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Disable Default Contact -->
<record id="website.contactus" model="ir.ui.view">
    <field name="active" eval="False"/>
</record>

<!-- Contact us page -->
<record id="page_contact" model="website.page">
    <field name="name">Contact us</field>
    <field name="is_published" eval="True"/>
    <field name="key">website_airproof_ecommerce.page_contact</field>
    <field name="url">/contactus</field>
    <field name="website_id">1</field>
    <field name="type">qweb</field>
    <field name="arch" type="xml">
        <t name="Contact us" t-name="website_airproof_ecommerce.page_contact">
            <!-- Title -->
            <t t-set="additional_title" t-value="'Contact us'"/>
            <!-- Content -->
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure">

                    <section class="s_title bg-black-50 o_colored_level s_parallax_no_overflow_hidden oe_img_bg o_bg_img_center pt88 pb88" data-vcss="001" data-snippet="s_title" data-name="Title" style="background-image: url(&quot;/web/image/website_airproof_ecommerce.img_topview&quot;);" data-mimetype="image/png" data-resize-width="1439">
                        <div class="o_we_bg_filter bg-black-50"/>
                        <div class="container">
                            <h2 class="text-center">Contact us</h2>
                        </div>
                    </section>
                    
                    <section class="s_text_block pt40 pb40 o_colored_level" data-snippet="s_text_block" data-name="Text">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-8 mt-4 mt-lg-0 o_colored_level">
                                    <p class="lead font-weight-bold">
                                        Tell us about your issue so we can help you more quickly.
                                    </p>
                                    <section class="s_website_form" data-vcss="001" data-snippet="s_website_form" data-name="Form">
                                        <div class="container">
                                            <form id="contactus_form" action="/website/form/" method="post" enctype="multipart/form-data" class="o_mark_required" data-mark="*" data-model_name="mail.mail" data-success-mode="message" data-success-page="/contactus-thank-you" data-pre-fill="true">
                                                <div class="s_website_form_rows row s_col_no_bgcolor">
                                                    <div class="s_website_form_field mb-3 col-12 s_website_form_custom s_website_form_required col-lg-6" data-type="char" data-name="Field">
                                                        <label class="s_website_form_label" style="width: 200px" for="oa6nprv4xz66">
                                                            <span class="s_website_form_label_content">Name</span>
                                                            <span class="s_website_form_mark"> *</span>
                                                        </label>
                                                        <input type="text" class="form-control s_website_form_input" name="Name" required="1" id="oa6nprv4xz66" data-fill-with="name"/>
                                                    </div>
                                                    <div class="s_website_form_field mb-3 col-12 col-lg-6 s_website_form_custom s_website_form_required" data-type="char" data-name="Field">
                                                        <label class="s_website_form_label " style="width: 200px" for="o0hwzfnz3t9vl">
                                                            <span class="s_website_form_label_content">Company name</span>
                                                            <span class="s_website_form_mark"> *</span>
                                                        </label>
                                                        <input type="text" class="form-control s_website_form_input" name="Company name" value="" placeholder="Airproof Ltd" id="o0hwzfnz3t9vl" data-fill-with="undefined" required=""/>
                                                    </div>
                                                    <div data-visibility-condition="" data-visibility-between="" class="s_website_form_field mb-3 col-12 col-lg-6 s_website_form_custom s_website_form_required" data-type="email" data-name="Field">
                                                        <label class="s_website_form_label " style="width: 200px" for="offv2x61n3j4">
                                                            <span class="s_website_form_label_content">Email address</span>
                                                            <span class="s_website_form_mark"> *</span>
                                                        </label>
                                                        <input type="email" class="form-control s_website_form_input" name="Email address" required="1" placeholder="" id="offv2x61n3j4" data-fill-with="email"/>
                                                    </div>
                                                    <div data-visibility-condition="" data-visibility-between="" class="s_website_form_field mb-3 col-12 s_website_form_custom s_website_form_required" data-type="text" data-name="Field">
                                                        <label class="s_website_form_label " style="width: 200px" for="orlhgd6hq3io">
                                                            <span class="s_website_form_label_content">Message</span>
                                                            <span class="s_website_form_mark">     *</span>
                                                        </label>
                                                        <textarea class="form-control s_website_form_input" name="Message" required="1" placeholder="" id="orlhgd6hq3io" rows="8"/>
                                                    </div>
                                                    <div class="s_website_form_field mb-3 col-12    s_website_form_dnone" data-name="Field">
                                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                                            <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px">
                                                                <span class="s_website_form_label_content"/>
                                                            </label>
                                                            <div class="col-sm">
                                                                <input type="hidden" class="form-control s_website_form_input" name="email_to" value="info@yourcompany.example.com"/>
                                                                <div class="s_website_form_field_description small form-text text-muted">
                                                                    Separate email addresses with a comma.
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="mb-0 py-2 col-12 s_website_form_submit text-start s_website_form_no_submit_label" data-name="Submit Button">
                                                        <div style="width: 200px;" class="s_website_form_label"/>
                                                        <a href="#" role="button" class="btn btn-primary x_btn_shape btn-lg s_website_form_send">Send message</a>
                                                        <span id="s_website_form_result"/>
                                                    </div>
                                                </div>
                                            </form>
                                            <div class="s_website_form_end_message d-none">
                                                <div class="oe_structure">
                                                    <section class="s_text_block pt64 pb64 o_colored_level bg-o-color-3 text-o-color-1" data-snippet="s_text_block">
                                                        <div class="container">
                                                            <p class="text-center">
                                                                <img src="/web/image/website_airproof_ecommerce.img_check" alt="Check icon" data-mimetype="image/svg" />
                                                            </p>
                                                            <h3 class="text-center">
                                                                <strong>
                                                                    Thank You For Your Feedback
                                                                </strong>
                                                            </h3>
                                                            <p class="text-center lead font-weight-bold">
                                                                Our team will message you back as soon as possible.<br/>
                                                                In the meantime we invite you to visit our <a href="/">website</a>.<br/>
                                                            </p>
                                                        </div>
                                                    </section>
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                </div>

                                <div class="col-lg-4 mt-4 mt-lg-0 o_colored_level o_we_force_no_transition">
                                    <div class="mb-0 ps-2">
                                        <h4>Contact details</h4>
                                        <div class="pb-4">
                                            <p>Airproof Ltd
                                                <br/>Rue du Laid Burniat, 5 
                                                <br/>1348 Ottignies-Louvain-la-Neuve
                                            </p>
                                        </div>
                                        <div class="pb-4">
                                            <p>
                                                <img src="/web/image/website_airproof_ecommerce.img_phone_black" alt="Phone icon" class="me-2 img img-fluid" data-mimetype="image/svg+xml" data-resize-width="undefined" />
                                                <span class="o_force_ltr">+32 2 290 34 90​</span>
                                                <br/>
                                                <img src="/web/image/website_airproof_ecommerce.img_envelop_black" alt="Envelop icon" class="me-2 img img-fluid o_we_force_no_transition" />
                                                <span>contact@airproof.com</span>
                                            </p>
                                        </div>
                                    </div>

                                    <section class="s_map pb256 pt112" data-map-type="m" data-map-zoom="18" data-snippet="s_map" data-map-address="Rue du Laid Burniat 5, 1348 Ottignies-Louvain-la-Neuve" data-name="Map">
                                        <div class="map_container o_not_editable">
                                            <div class="css_non_editable_mode_hidden">
                                                <div class="missing_option_warning alert alert-info rounded-0 fade show d-none d-print-none">
                                                An address must be specified for a map to be embedded
                                                </div>
                                            </div>
                                            <iframe class="s_map_embedded o_not_editable" width="100%" height="100%" src="https://maps.google.com/maps?q=Rue%20du%20Laid%20Burniat%205%2C%201348%20Ottignies-Louvain-la-Neuve&amp;t=m&amp;z=12&amp;ie=UTF8&amp;iwloc=&amp;output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"/>
                                        </div>
                                    </section>
                                </div>
                            </div>
                        </div>
                    </section>

                </div>
            </t>
        </t>
    </field>
</record>

</odoo>
