<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Activate language selector -->
    <record id="website.header_language_selector" model="ir.ui.view">
        <field name="active" eval="True"/>
    </record>

    <!-- Display only text for language selection in header -->
    <record id="website.header_language_selector_flag" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <record id="website.header_language_selector_no_text" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!-- Disable Language Selector in footer -->
    <record id="portal.footer_language_selector" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!-- Disable default header -->
    <record id="website.template_header_default" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!-- Enable empty cart -->
    <record id="website_sale.header_hide_empty_cart_link" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!-- Disable Call-to-action -->
    <record id="website.header_call_to_action" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!-- Disable Copyright -->
    <record id="website.footer_no_copyright" model="ir.ui.view">
        <field name="active" eval="True"/>
    </record>

    <!-- FOOTER -->
    <!-- Disable Default Footer -->
    <record id="website.footer_custom" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!-- SHOP -->
    <!-- //////////////////////////////////////////////////////////////////// -->

    <!-- Disable Product price -->
    <record id="website_sale.filter_products_price" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!-- Disable Wishlist -->
    <record id="website_sale_wishlist.product_add_to_wishlist" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!-- Enable wishlist on header -->
    <record id="website_sale_wishlist.header_wishlist_link" model="ir.ui.view">
        <field name="active" eval="True"/>
    </record>

    <!-- Disable Wishlist icon on products on all products page -->
    <record id="website_sale_wishlist.add_to_wishlist" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!-- Disable Comparison list -->
    <record id="website_sale_comparison.add_to_compare" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!-- Disable Grid or list option -->
    <record id="website_sale.add_grid_or_list_option" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!-- Enable product categories in the left but not on top -->
    <record id="website_sale.products_categories" model="ir.ui.view">
        <field name="active" eval="True"/>
    </record>

    <!-- Enable Style card for products design -->
    <record id="website_sale.products_design_card" model="ir.ui.view">
        <field name="active" eval="True"/>
    </record>

    <!-- Disable Terms and conditions -->
    <record id="website_sale.product_custom_text" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!-- Disable Share buttons -->
    <record id="website_sale.product_share_buttons" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!-- Enable Product Attributes -->
    <record id="website_sale.products_attributes" model="ir.ui.view">
        <field name="active" eval="True"/>
    </record>

    <!-- Disable quantity -->
    <record id="website_sale.product_quantity" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!-- Enable product attributes table -->
    <record id="website_sale_comparison.product_attributes_body" model="ir.ui.view">
        <field name="active" eval="False"/>
    </record>

    <!-- Enable alternative products -->
    <record id="website_sale.recommended_products" model="ir.ui.view">
        <field name="active" eval="True"/>
    </record>

    <record id="website_sale.carousel_product_indicators_bottom" model="ir.ui.view">
        <field name="active" eval="True"/>
    </record>

    <!-- HEADER and FOOTER CUSTOM -->
    <!-- //////////////////////////////////////////////////////////////////// -->

    <template id="template_header_opt" inherit_id="website.snippet_options" name="Header Template - Option">
        <xpath expr="//we-select[@data-variable='header-template']" position="inside">
            <we-button title="airproof"
                data-customize-website-views="website_airproof_ecommerce.header"
                data-customize-website-variable="'airproof'"
                data-img="/website_airproof_ecommerce/static/src/img/wbuilder/template_header_opt.svg"/>
        </xpath>
    </template>

    <template id="template_footer_opt" inherit_id="website.snippet_options" name="Airproof Footer Template - Option">
        <xpath expr="//we-select[@data-variable='footer-template']" position="inside">
            <we-button title="airproof" data-customize-website-views="website_airproof_ecommerce.footer" data-customize-website-variable="'airproof'" data-img="/website_airproof_ecommerce/static/src/img/wbuilder/template_footer_opt.svg" />
        </xpath>
    </template>

</odoo>
