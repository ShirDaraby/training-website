<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Add bg shapes to the builder -->
<template id="background_shapes_options" inherit_id="website.snippet_options_background_options" name="Airproof Snippets Background Options">
    <xpath expr="//*[hasclass('o_we_shape_menu')]/*[last()]" position="after">
        <we-select-page string="Airproof">
            <we-button data-shape="illustration/airproof/waves" data-select-label="Waves"/>
            <we-button data-shape="illustration/airproof/waves2" data-select-label="Waves2"/>
            <we-button data-shape="illustration/airproof/waves3" data-select-label="Waves3"/>
            <we-button data-shape="illustration/airproof/texture" data-select-label="Texture"/>
        </we-select-page>
    </xpath>
</template>

<!-- Add custom snippets to the builder -->
<template id="snippets" inherit_id="website.snippets" name="Custom snippets">
    <xpath expr="//*[@id='default_snippets']" position="before">
        <t id="x_snippets">
            <div id="x_snippets_category" class="o_panel">
                <div class="o_panel_header">Airproof ecommerce</div>
                <div class="o_panel_body">
                    <t t-snippet="website_airproof_ecommerce.s_airproof_newsletter"
                        t-thumbnail="/website_airproof_ecommerce/static/src/img/wbuilder/s_airproof_newsletter.svg">
                        <keywords>Newsletter block</keywords>
                    </t>
                </div>
            </div>
        </t>
    </xpath>
</template>

<!-- Add custom template for dynamic product block -->
<template id="dynamic_filter_template_product_product_airproof" name="Airproof product template">
    <t t-foreach="records" t-as="data" data-number-of-elements="4" data-number-of-elements-sm="1" data-number-of-elements-fetch="8">
        <t t-set="record" t-value="data['_record']"/>
        <div class="o_carousel_product_card card h-100 w-100" t-att-data-add2cart-rerender="data.get('_add2cart_rerender')">
            <div t-if="is_sample" class="h5 o_ribbon_right bg-primary text-uppercase">Sample</div>

            <input type="hidden" name="product-id" t-att-data-product-id="record.id"/>

            <a class="o_carousel_product_img_link" t-att-href="record.website_url">
                <img class="o_carousel_product_card_img_top card-img-top" t-att-src="data['image_512']"
                    t-att-alt="record.display_name"/>
            </a>

            <i t-if="data.get('_latest_viewed')" class="fa fa-trash o_carousel_product_remove js_remove"></i>

            <div class="o_carousel_product_card_body card-body ">
                <a t-att-href="record.website_url" class="text-decoration-none h-100 d-flex flex-column justify-content-between">
                    <div>
                        <div class="h6 card-title mb-0" t-field="record.display_name"/>
                        <t t-call="website_sale.price_dynamic_filter_template_product_product"/>
                    </div>
                    <span class="small text-dark pt-3" >Discover more<img src="/web/image/website_airproof_ecommerce.img_arrow_small" alt="Arrow icon" class="ml-2"/>
                    </span>
                </a>
            </div>
            
        </div>
    </t>
</template>

</odoo>
