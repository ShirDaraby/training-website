<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Replace icon cart -->
    <template inherit_id="website_sale.header_cart_link" id="cart-icon" name="Cart icon">
        <xpath expr="//i" position="replace" >
            <img src="/web/image/website_airproof_ecommerce.img_shopping" alt="shopping icon" />
        </xpath>
    </template>
    <!-- Custom header -->
    <record id="header" model="ir.ui.view">
        <field name="name">Airproof header</field>
        <field name="type">qweb</field>
        <field name="key">website_airproof_ecommerce.header</field>
        <field name="priority">16</field>
        <field name="inherit_id" ref="website.layout"/>
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <xpath expr="//header//nav" position="replace">
                <t t-call="website.navbar">
                    <div id="top_menu_container" class="container">
                        <!-- Brand -->
                        <t t-call="website.placeholder_header_brand">
                            <t t-set="_link_class" t-valuef="navbar-brand logo m-0 flex-grow-1"/>
                        </t>
                        <!-- Right -->
                        <ul class="nav navbar-nav o_header_centered_logo justify-content-end flex-row align-items-center d-none d-lg-flex">
                            <!-- Language Selector -->
                            <t t-call="website.placeholder_header_language_selector">
                                <t t-set="_div_classes" t-valuef="ml-lg-1 mb-2 mb-lg-0 align-self-lg-center"/>
                            </t>
                            <!-- Shopping cart -->
                            <t t-call="website_sale.header_cart_link">
                                <t t-set="_icon" t-value="True" />
                                <t t-set="_item_class" t-value="'nav-item'" />
                                <t t-set="_link_class" t-value="'nav-link py-3'" />
                            </t>
                            <!-- Wishlist icon -->
                            <t t-call="website_sale_wishlist.header_wishlist_link">
                                <t t-set="_icon" t-value="True"/>
                                <t t-set="_item_class" t-value="'nav-item mr-lg-3'"/>
                                <t t-set="_link_class" t-value="'nav-link py-3'"/>
                            </t>
                            <!-- Sign In -->
                            <t t-call="portal.placeholder_user_sign_in">
                                <t t-set="_item_class" t-valuef="nav-item ml-3"/>
                                <t t-set="_link_class" t-valuef="nav-link py-3"/>
                            </t>
                            <!-- User Dropdown -->
                            <t t-call="portal.user_dropdown">
                                <t t-set="_icon" t-value="false"/>
                                <t t-set="_user_name" t-value="true"/>
                                <t t-set="_item_class" t-valuef="nav-item dropdown ml-3"/>
                                <t t-set="_link_class" t-valuef="nav-link rounded-sm"/>
                                <t t-set="_dropdown_menu_class" t-valuef="position-absolute dropdown-menu-right"/>
                            </t>
                        </ul>
                        <!-- Navbar Toggler -->
                        <t t-call="website.navbar_toggler"/>
                        <!-- Navbar Collapse -->
                        <div id="top_menu_collapse"
                            class="collapse navbar-collapse o_header_centered_logo order-last order-lg-first bg-white">
                            <t t-call="website.navbar_nav">
                                <!-- Menu -->
                                <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                    <t t-call="website.submenu">
                                        <t t-set="item_class" t-valuef="nav-item"/>
                                        <t t-set="link_class" t-valuef="nav-link py-3"/>
                                    </t>
                                </t>
                            </t>

                            <ul class="d-flex d-flex-md justify-content-center align-items-center flex-wrap d-lg-none d-xl-none py-3 border-top list-unstyled">
                                <!-- Language Selector -->
                                <li class="nav-item">
                                    <t t-call="website.placeholder_header_language_selector">
                                        <t t-set="_div_classes" t-valuef="ml-3"/>
                                    </t>
                                </li>
                                
                                <!-- Shopping cart -->
                                <t t-call="website_sale.header_cart_link">
                                    <t t-set="_icon" t-value="True" />
                                    <t t-set="_item_class" t-value="'nav-item'" />
                                    <t t-set="_link_class" t-value="'nav-link py-3'" />
                                </t>

                                <!-- Wishlist icon -->
                                <t t-call="website_sale_wishlist.header_wishlist_link">
                                    <t t-set="_icon" t-value="True"/>
                                    <t t-set="_item_class" t-value="'nav-item mr-lg-3'"/>
                                    <t t-set="_link_class" t-value="'nav-link py-3'"/>
                                </t>
    
                                <!-- Sign In -->
                                <t t-call="portal.placeholder_user_sign_in">
                                    <t t-set="_item_class" t-valuef="nav-item"/>
                                    <t t-set="_link_class" t-valuef="nav-link py-3"/>
                                </t>
                                <!-- User Dropdown -->
                                <t t-call="portal.user_dropdown">
                                    <t t-set="_icon" t-value="false"/>
                                    <t t-set="_user_name" t-value="true"/>
                                    <t t-set="_item_class" t-valuef="nav-item dropdown"/>
                                    <t t-set="_link_class" t-valuef="nav-link rounded-sm"/>
                                    <t t-set="_dropdown_menu_class" t-valuef="dropdown-menu-right"/>
                                </t>
                            </ul>

                            

                        </div>
                    </div>
                </t>


            </xpath>
        </field>
    </record>

    <!-- //////////////////////////////////////////////////////////////// -->

    <!-- Custom Footer -->
    <record id="footer" model="ir.ui.view">
        <field name="name">Airproof Footer</field>
        <field name="type">qweb</field>
        <field name="key">website_airproof_ecommerce.footer</field>
        <field name="priority">16</field>
        <field name="inherit_id" ref="website.layout" />
        <field name="mode">extension</field>
        <field name="arch" type="xml">

            <xpath expr="//div[@id='footer']" position="replace">
                <div id="footer" class="oe_structure oe_structure_solo" t-ignore="true" t-if="not no_footer">
                    <!-- Newsletter block -->
                    <section class="s_airproof_newsletter o_colored_level o_cc o_cc2 pt48 pb48" data-name="Newsletter custom" >
                        <div class="container">
                            <div class="row d-flex flex-row align-items-center">
                                <div class="pt8 pb8 o_colored_level col-lg-6">
                                    <h2>Sign up for our newsletter </h2>
                                    <p>Don't miss the newsletter with news and special offers !</p>
                                </div>
                                <div class="pt8 pb8 o_colored_level col-lg-6">
                                    <div class="s_newsletter_subscribe_form s_newsletter_list js_subscribe" data-vxml="001" data-list-id="0" data-name="Newsletter Form" data-snippet="s_newsletter_subscribe_form">
                                        <div class="input-group d-flex align-items-stretch">
                                            <input type="email" name="email" class="js_subscribe_email form-control" placeholder="your email..."/>
                                            <a role="button" href="#" class="js_subscribe_btn o_submit btn btn-secondary font-weight-bold">
                                                <strong>Subscribe</strong>
                                            </a>
                                            <a role="button" href="#" class="btn btn-success js_subscribed_btn o_submit d-none font-weight-bold" disabled="disabled">Thanks</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    
                    <section class="s_text_block pt80 pb24" data-snippet="s_text_block" data-name="Text">
                        <div class="container">
                            <div class="row">
                                <div class="col col-lg-6 pb40 pr-md-5">
                                  <p class="small pl-0">
                                    Creativity is at the heart of every dream. Every idea, every groundbreaking leap that changes our world starts with the vision of talented creators. At Airproof, we give these creators the tools they need to bring their ideas to life.
                                  </p>
                                </div>
    
                                <div class="col-6 col-md-4 col-lg-2 pb-4">
                                    <p class="mb-4 opacity-5 text-muted"><span class="small">Our drones</span></p>
                                    <ul class="list-unstyled">
                                        <li class="mb-2"><span class="small"><a class="text-white" href="/">Airproof Mini</a></span></li>
                                        <li class="mb-2"><span class="small"><a class="text-white" href="/">Airproof Pro</a></span></li>
                                        <li class="mb-2"><span class="small"><a class="text-white" href="/">Airproof Robin</a></span></li>
                                        <li class="mb-2"><span class="small"><a class="text-white" href="/">Airproof Falcon</a></span></li>
                                        <li class="mb-2"><span class="small"><a class="text-white" href="/">Airproof Eagle</a></span></li>
                                    </ul>
                                </div>
                                <div class="col-6 col-md-4 col-lg-2 pb-4">
                                    <p class="mb-4 opacity-5 text-muted"><span class="small">Our accessories</span></p>
                                    <ul class="list-unstyled">
                                        <li class="mb-2"><span class="small"><a class="text-white" href="/">Drones cases</a></span></li>
                                        <li class="mb-2"><span class="small"><a class="text-white" href="/">Float kit</a></span></li>
                                        <li class="mb-2"><span class="small"><a class="text-white" href="/">Controllers</a></span></li>
                                        <li class="mb-2"><span class="small"><a class="text-white" href="/">Cameras</a></span></li>
                                        <li class="mb-2"><span class="small"><a class="text-white" href="/">Stickers</a></span></li>
                                    </ul>
                                </div>
                                <div class="col col-md-4 col-lg-2 pb-4">
                                    <p class="mb-4 opacity-5 text-muted"><span class="small">Contact us</span></p>
                                    <p class="mb-4">
                                        <span class="small">Airproof<br/>10 Rue Van Hove<br/>1000 Brussel</span>
                                    </p>
                                    <ul class="list-unstyled">
                                        <li>
                                            <img src="/web/image/website_airproof_ecommerce.img_phone" alt="Phone icon" class="me-2 img img-fluid" data-mimetype="image/svg+xml" data-resize-width="undefined" style="opacity: 0.6;" />
                                            <span class="o_force_ltr">+32 2 290 34 90​</span>
                                        </li>
                                        <li>
                                            <img src="/web/image/website_airproof_ecommerce.img_envelop" alt="Envelop icon" class="me-2 img img-fluid o_we_force_no_transition" style="opacity: 0.6;"/>
                                            <span>info@airproof.com</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>      

                        <div class="container pt24 pb24">
                            <div class="row d-flex flex-row align-items-center justify-content-between">
                                <div class="col col-md-6 col-lg-6 s_social_media text-start no_icon_color" data-snippet="s_social_media" data-name="Social Media">
                                    <h4 class="s_social_media_title d-none">Social Media</h4>
                                    <a target="_blank" href="/website/social/facebook" class="s_social_media_facebook">
                                    <i class="fa rounded-circle shadow-sm fa-facebook text-o-color-1"></i>
                                    </a>
                                    <a target="_blank" href="/website/social/youtube" class="s_social_media_youtube">
                                    <i class="fa rounded-circle shadow-sm fa-youtube text-o-color-1"></i>
                                    </a>
                                    <a target="_blank" href="/website/social/instagram" class="s_social_media_instagram">
                                    <i class="fa rounded-circle shadow-sm fa-instagram text-o-color-1"></i>
                                    </a>
                                </div>
                                <div class="col col-md-6 col-lg-6">
                                    <p class="small text-right" style="margin-top: 1rem; margin-bottom: 1rem;">© Airproof. All rights reserved.</p>
                                </div>
                            </div>
                        </div>               
    
                    </section>
    
                </div>
            </xpath>

        </field>
    </record>

</odoo>
