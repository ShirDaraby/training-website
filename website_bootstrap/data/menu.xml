            <section class="py-4 o_cc1 o_cc5 menu-drones" style="background-color: #F4F4F4 !important;">
                <div class="container">
                    <div class="row">
                        <div class="col-6 col-sm text-center py-2 o_colored_level">
                            <a href="/shop/airproof-mini-1" class="nav-link p-0" data-name="Menu Item">
                                <img src="/web/image/website_airproof.img_mini" alt="Drone Airproof Mini" class="img-fluid img" data-mimetype="image/png" data-resize-width="200" />
                                <br/>
                                <span class="d-block p-2">
                                    <font class="fw-bold" style="font-size:14px;">Airproof Mini</font>
                                </span>
                            </a>
                        </div>
                        <div class="col-6 col-sm text-center py-2 o_colored_level">
                            <a href="/shop/airproof-pro-2" class="nav-link p-0" data-name="Menu Item">
                                <img src="/web/image/website_airproof.img_pro" alt="Drone Airproof Pro" class="img-fluid img" data-mimetype="image/png" data-resize-width="200" />
                                <br/>
                                <span class="d-block p-2">
                                    <font class="fw-bold" style="font-size:14px;">Airproof Pro</font>
                                </span>
                            </a>
                        </div>
                        <div class="col-6 col-sm text-center py-2 o_colored_level">
                            <a href="/shop/airproof-robin-3" class="nav-link p-0" data-name="Menu Item">
                                <img src="/web/image/website_airproof.img_robin" alt="Drone Airproof Robin" class="img-fluid img" data-mimetype="image/png" data-resize-width="200" />
                                <br/>
                                <span class="d-block p-2">
                                    <font class="fw-bold" style="font-size:14px;">Airproof Robin</font>
                                </span>
                            </a>
                        </div>
                        <div class="col-6 col-sm text-center py-2 o_colored_level">
                            <a href="/shop/airproof-falcon-4" class="nav-link p-0" data-name="Menu Item">
                                <img src="/web/image/website_airproof.img_falcon" alt="Drone Airproof Falcon" class="img-fluid img" data-mimetype="image/png" data-resize-width="200" />
                                <br/>
                                <span class="d-block p-2">
                                    <font class="fw-bold" style="font-size:14px;">Airproof Falcon</font>
                                </span>
                            </a>
                        </div>
                        <div class="col-6 col-sm text-center py-2 o_colored_level">
                            <a href="/shop/airproof-eagle-5" class="nav-link p-0" data-name="Menu Item">
                                <img src="/web/image/website_airproof.img_eagle" alt="Drone Airproof Eagle" class="img-fluid img" data-mimetype="image/png" data-resize-width="200" />
                                <br/>
                                <span class="d-block p-2">
                                    <font class="fw-bold" style="font-size:14px;">Airproof Eagle</font>
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            </section>
        </field>
    </record>


